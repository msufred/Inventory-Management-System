<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefWidth="250.0" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="tfUsername" promptText="Username" />
      <PasswordField fx:id="tfPassword" promptText="Password" />
      <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="228.0" visible="false" />
      <HBox alignment="CENTER_RIGHT" spacing="4.0">
         <children>
            <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" text="Login" />
            <Button fx:id="btnRegister" mnemonicParsing="false" text="Register" />
            <Button fx:id="btnExit" mnemonicParsing="false" text="Exit" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
